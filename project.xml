<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="https://lime.openfl.org/project/1.0.4" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://lime.openfl.org/project/1.0.4 https://lime.openfl.org/xsd/project-1.0.4.xsd">

	<!--Application Settings -->

	<app title="UNDERTALE" packageName="com.majigsaw.undertale" package="com.majigsaw.undertale" version="1.0.0" company="MAJigsaw" />

	<app file="UNDERTALE" main="Main" preloader="flixel.system.FlxPreloader" />

	<icon path="icon.png" />

	<!--Window Settings -->

	<window width="640" height="480" fps="30" orientation="landscape" background="#000000" hardware="true" vsync="false" />

	<window if="mobile || switch" orientation="landscape" fullscreen="true" resizable="false" />

	<!--Path Settings-->

	<set name="BUILD_DIR" value="export" />

	<assets path="assets" />

	<source name="src" />

	<!--Libraries-->

	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />

	<haxelib name="hscript" />
	<haxelib name="polymod" />

	<haxelib name="extension-androidtools" if="android" />

	<!--hxcpp Settings-->
	<haxedef name="HXCPP_CHECK_POINTER" />
	<haxedef name="HXCPP_STACK_LINE" />
	<haxedef name="HXCPP_STACK_TRACE" />

	<!--Hscript Settings-->
	<haxedef name="hscriptPos" />

	<!--Flixel Settings-->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

	<!--Polymod Settings-->
	<haxedef name="POLYMOD_DEBUG" if="debug" />
	<haxedef name="POLYMOD_MOD_METADATA_FILE" value="meta" />
	<haxedef name="POLYMOD_MOD_PACK_FILE" value="pack" />
	<haxedef name="POLYMOD_MOD_ICON_FILE" value="icon" />

	<!--Dce Settings-->
	<haxeflag name="-dce" value="no" />

</project>
